<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mygoods.mapper.GoodsMapper">

    <resultMap id="BaseResultMap" type="com.example.mygoods.model.Goods">
        <id property="id" column="id" jdbcType="BIGINT" />
        <result property="name" column="name" jdbcType="VARCHAR" />
        <result property="price" column="price" jdbcType="INTEGER" />
        <result property="stock" column="stock" jdbcType="INTEGER" />
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP" />
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP" />
    </resultMap>

    <insert id="insert" parameterType="com.example.mygoods.model.Goods">
        INSERT INTO `test`.`goods`
        (
            `name`,
            `price`,
            `stock`
        )
        VALUES
        (
            #{goods.name},
            #{goods.price},
            #{goods.stock}
        )
    </insert>

    <delete id="deleteById" parameterType="long">
        DELETE FROM `test`.`goods`
        WHERE `id` = #{id}
    </delete>

    <update id="updateById" parameterType="com.example.mygoods.model.Goods">
        UPDATE `test`.`goods`
        SET
            `name` = #{goods.name},
            `price` = #{goods.price},
            `stock` = #{goods.stock}
        WHERE `id` = #{goods.id}
    </update>

    <select id="selectById" parameterType="long" resultMap="BaseResultMap">
        SELECT `id`, `name`, `price`, `stock`, `create_time`, `update_time`
        FROM `test`.`goods`
        WHERE `id` = #{id}
    </select>

</mapper>